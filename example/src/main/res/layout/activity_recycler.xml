<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yiciyuan.kernel.widget.ToolBarView
        android:id="@+id/toolBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_toolbar_background_color="@color/white"
        app:tb_titleTextColor="@color/black"
        app:tb_rightTextColor="@color/black"
        app:tb_navigationIcon="@mipmap/ic_action_break"/>

    <com.yiciyuan.kernel.widget.recycle.RefreshRecyclerView
        android:id="@+id/refreshRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rrv_header_progressColor="@color/theme_body" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_main_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_main_tab_home"
            android:drawablePadding="3dp"
            android:onClick="onTabSelect"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:scaleType="matrix"
            android:stateListAnimator="@null"
            android:text="上医帮手"
            android:textColor="@drawable/selector_textview_color_one"
            android:textSize="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_main_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_main_tab_message"
            android:drawablePadding="3dp"
            android:onClick="onTabSelect"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:scaleType="matrix"
            android:stateListAnimator="@null"
            android:text="消息"
            android:textColor="@drawable/selector_textview_color_one"
            android:textSize="11dp" />


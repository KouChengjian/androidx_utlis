<!--            android:visibility="gone" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_main_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_main_tab_contact"
            android:drawablePadding="3dp"
            android:onClick="onTabSelect"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:scaleType="matrix"
            android:text="患者通讯录"
            android:textColor="@drawable/selector_textview_color_one"
            android:textSize="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_main_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_main_tab_work"
            android:drawablePadding="3dp"
            android:onClick="onTabSelect"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:scaleType="matrix"
            android:stateListAnimator="@null"
            android:text="病历"
            android:textColor="@drawable/selector_textview_color_one"
            android:textSize="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_main_mine"
            android:layout_width="match_parent"
